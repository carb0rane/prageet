<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/grey"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/rcViewSongCardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        app:cardBackgroundColor="@color/grey"
        app:cardCornerRadius="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgViewSongRecyclerAlbumArt"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:src="@drawable/ic_music" />

        <TextView
            android:id="@+id/tvSongNameRecycler"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="10dp"
            android:hint="~ Song Name ~"
            android:text="Songs Go Here ! "
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvArtistNameRecycler"
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:text="Arijit, Lata Mangeshkar, Kishore Kumar, Others"
            android:textColor="#C6C7CD"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="55dp"/>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>